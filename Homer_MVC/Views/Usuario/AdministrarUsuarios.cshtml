@{
    ViewBag.Title = "Administrar Usuarios";
}

@model List<Homer_MVC.Models.usuario>

<div class="normalheader transition">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>
            <div id="hbreadcrumb" class="pull-right m-t-lg">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li><a href="@Url.Action("Index", "Usuarios")">Usuarios</a></li>
                    <li class="active">
                        <span>Administrar Usuarios</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Administrador de usuarios
            </h2>
            <small>Crea, elimina o administra los usuarios del sistema.</small>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Lista completa de usuarios
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            @foreach(var c in ViewBag.Columnas)
                            {
                                <text>
                                    <th>@c</th>
                                </text>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Homer_MVC.Models.usuario u in Model)
                        {
                            <text>
                                <tr>
                                    <td>@u.Nombre</td>
                                    <td>@u.Apellidos</td>
                                    <td>@u.Email</td>
                                    <td>@u.Telefono</td>
                                    <td>@u.Empresa</td>
                                    <td>@u.Privilegios</td>
                                </tr>
                            </text>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatables/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")

    <script type="text/javascript">

        $(function () {

            // JSON data
            var chartDataUrl = '@Url.Action("tableJsonData", "Tables")';

            // Initialize Example 1
            $('#example1').dataTable({
                "ajax": chartDataUrl
            });

            // Initialize Example 2
            $('#example2').dataTable();

        });
    </script>
}